<form method="get" action="/quizes" autocomplete="off">
    <label>Buscar :</label><input name="search" type="search"><input type="submit" value="Buscar">
</form>
<table>
    <% var i; for (i=0; i<quizes.length; i++) {%>
        <tr>
            <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a></td>
            <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
            <% if (session.user) {%>
                <td><a href="quizes/<%= quizes[i].id %>/edit"><buton>editar</buton></a></td>
                <td>
                    <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                        <button type="submit" onclick="return confirm('Borar: <%= quizes[i].pregunta %>')">borrar</button>
                    </form>
                </td>
            <% } %>
        </tr>
    <% } %>
    
    <% if (session.user) {%>
        <a href="/quizes/new"><button>Crear pregunta</button></a>
    <% } %>
</table>